           where: {
             deletedAt: null,
             partecipante: {
               companyId: userCompanyId
             }
           },
           include: {
             partecipante: {
               select: {
                 id: true,
                 first_name: true,
                 last_name: true,
                 email: true
               }
             },
             scheduledCourse: {
               select: {
                 id: true,
                 course: {
