# Staging Environment Configuration
# This file contains staging-specific environment variables

# Environment
NODE_ENV=staging

# Database Configuration
STAGING_DATABASE_URL=postgresql://staging_user:staging_password@postgres:5432/document_management_staging
STAGING_DB_NAME=document_management_staging
STAGING_DB_USER=staging_user
STAGING_DB_PASSWORD=staging_password
STAGING_DB_HOST=postgres
STAGING_DB_PORT=5432

# Redis Configuration
STAGING_REDIS_URL=redis://:staging_redis_password@redis:6379
STAGING_REDIS_PASSWORD=staging_redis_password

# JWT Configuration
STAGING_JWT_SECRET=staging-super-secret-jwt-key-change-in-production
STAGING_JWT_REFRESH_SECRET=staging-super-secret-refresh-key-change-in-production
STAGING_JWT_EXPIRES_IN=1h
STAGING_JWT_REFRESH_EXPIRES_IN=7d

# Google OAuth Configuration
STAGING_GOOGLE_CLIENT_ID=your-staging-google-client-id
STAGING_GOOGLE_CLIENT_SECRET=your-staging-google-client-secret
STAGING_GOOGLE_CREDENTIALS=your-staging-google-service-account-json

# Server Configuration
STAGING_API_URL=http://localhost:8888/api
STAGING_DOCS_URL=http://localhost:8888/docs
STAGING_FRONTEND_URL=http://localhost:80

# Server Ports
MAIN_SERVER_PORT=3001
API_SERVER_PORT=4001
DOCS_SERVER_PORT=4002
PROXY_SERVER_PORT=8888

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760  # 10MB
UPLOAD_ALLOWED_TYPES=pdf,doc,docx,txt,jpg,jpeg,png,gif

# Email Configuration (for staging notifications)
STAGING_SMTP_HOST=smtp.mailtrap.io
STAGING_SMTP_PORT=2525
STAGING_SMTP_USER=your-mailtrap-user
STAGING_SMTP_PASS=your-mailtrap-password
STAGING_FROM_EMAIL=noreply@staging.yourdomain.com

# Monitoring Configuration
STAGING_SENTRY_DSN=your-staging-sentry-dsn
STAGING_LOG_LEVEL=debug

# Security Configuration
STAGING_CORS_ORIGIN=http://localhost:80,http://localhost:3000
STAGING_RATE_LIMIT_WINDOW=15  # minutes
STAGING_RATE_LIMIT_MAX=1000   # requests per window

# SSL Configuration (for staging with self-signed certificates)
STAGING_SSL_CERT_PATH=/etc/ssl/certs/staging.crt
STAGING_SSL_KEY_PATH=/etc/ssl/private/staging.key

# Backup Configuration
STAGING_BACKUP_ENABLED=true
STAGING_BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
STAGING_BACKUP_RETENTION_DAYS=7

# Feature Flags
STAGING_ENABLE_DEBUG_LOGS=true
STAGING_ENABLE_PERFORMANCE_MONITORING=true
STAGING_ENABLE_EXPERIMENTAL_FEATURES=true

# Notification Webhooks
SLACK_WEBHOOK_URL=your-slack-webhook-url-for-staging
DISCORD_WEBHOOK_URL=your-discord-webhook-url-for-staging

# Testing Configuration
STAGING_TEST_USER_EMAIL=test@staging.yourdomain.com
STAGING_TEST_USER_PASSWORD=staging_test_password

# Cache Configuration
STAGING_CACHE_TTL=300  # 5 minutes
STAGING_CACHE_MAX_SIZE=100MB

# Session Configuration
STAGING_SESSION_SECRET=staging-session-secret-change-in-production
STAGING_SESSION_MAX_AGE=86400000  # 24 hours

# API Rate Limiting
STAGING_API_RATE_LIMIT=1000  # requests per hour per IP
STAGING_API_BURST_LIMIT=100  # burst requests

# File Storage Configuration
STAGING_STORAGE_TYPE=local  # local, s3, gcs
STAGING_STORAGE_PATH=/app/uploads

# Health Check Configuration
STAGING_HEALTH_CHECK_INTERVAL=30  # seconds
STAGING_HEALTH_CHECK_TIMEOUT=5    # seconds

# Metrics Configuration
STAGING_METRICS_ENABLED=true
STAGING_METRICS_PORT=9090

# Development Tools
STAGING_HOT_RELOAD=false
STAGING_SOURCE_MAPS=true
STAGING_MINIFY=true