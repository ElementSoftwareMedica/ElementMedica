# Production Environment Configuration
# This file contains production-specific environment variables
# IMPORTANT: Change all default passwords and secrets before deployment!

# Environment
NODE_ENV=production

# Database Configuration
PRODUCTION_DATABASE_URL=postgresql://prod_user:CHANGE_THIS_PASSWORD@postgres:5432/document_management_prod
PRODUCTION_DB_NAME=document_management_prod
PRODUCTION_DB_USER=prod_user
PRODUCTION_DB_PASSWORD=CHANGE_THIS_PASSWORD
PRODUCTION_DB_HOST=postgres
PRODUCTION_DB_PORT=5432

# Database Backup Configuration
PRODUCTION_DB_BACKUP_USER=backup_user
PRODUCTION_DB_BACKUP_PASSWORD=CHANGE_THIS_BACKUP_PASSWORD

# Redis Configuration
PRODUCTION_REDIS_URL=redis://:CHANGE_THIS_REDIS_PASSWORD@redis:6379
PRODUCTION_REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD

# JWT Configuration
PRODUCTION_JWT_SECRET=CHANGE_THIS_SUPER_SECRET_JWT_KEY_IN_PRODUCTION
PRODUCTION_JWT_REFRESH_SECRET=CHANGE_THIS_SUPER_SECRET_REFRESH_KEY_IN_PRODUCTION
PRODUCTION_JWT_EXPIRES_IN=15m
PRODUCTION_JWT_REFRESH_EXPIRES_IN=7d

# Google OAuth Configuration
PRODUCTION_GOOGLE_CLIENT_ID=your-production-google-client-id
PRODUCTION_GOOGLE_CLIENT_SECRET=your-production-google-client-secret
PRODUCTION_GOOGLE_CREDENTIALS=your-production-google-service-account-json

# Server Configuration
PRODUCTION_API_URL=https://yourdomain.com/api
PRODUCTION_DOCS_URL=https://yourdomain.com/docs
PRODUCTION_FRONTEND_URL=https://yourdomain.com
PRODUCTION_DOMAIN=yourdomain.com

# Server Ports
MAIN_SERVER_PORT=3000
API_SERVER_PORT=4000
DOCS_SERVER_PORT=4002
PROXY_SERVER_PORT=8888

# SSL Configuration
PRODUCTION_SSL_CERT_PATH=/etc/ssl/certs/yourdomain.com.crt
PRODUCTION_SSL_KEY_PATH=/etc/ssl/private/yourdomain.com.key
PRODUCTION_SSL_CHAIN_PATH=/etc/ssl/certs/yourdomain.com.chain.crt

# File Upload Configuration
UPLOAD_MAX_SIZE=52428800  # 50MB
UPLOAD_ALLOWED_TYPES=pdf,doc,docx,txt,jpg,jpeg,png,gif,xlsx,pptx

# Email Configuration
PRODUCTION_SMTP_HOST=smtp.yourmailprovider.com
PRODUCTION_SMTP_PORT=587
PRODUCTION_SMTP_USER=your-production-smtp-user
PRODUCTION_SMTP_PASS=your-production-smtp-password
PRODUCTION_FROM_EMAIL=noreply@yourdomain.com

# Monitoring Configuration
PRODUCTION_SENTRY_DSN=your-production-sentry-dsn
PRODUCTION_LOG_LEVEL=info

# Security Configuration
PRODUCTION_CORS_ORIGIN=https://yourdomain.com
PRODUCTION_RATE_LIMIT_WINDOW=15  # minutes
PRODUCTION_RATE_LIMIT_MAX=100    # requests per window

# Backup Configuration
PRODUCTION_BACKUP_ENABLED=true
PRODUCTION_BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
PRODUCTION_BACKUP_RETENTION_DAYS=30
PRODUCTION_BACKUP_S3_BUCKET=your-backup-s3-bucket
PRODUCTION_BACKUP_S3_REGION=your-s3-region
PRODUCTION_BACKUP_S3_ACCESS_KEY=your-s3-access-key
PRODUCTION_BACKUP_S3_SECRET_KEY=your-s3-secret-key

# Feature Flags
PRODUCTION_ENABLE_DEBUG_LOGS=false
PRODUCTION_ENABLE_PERFORMANCE_MONITORING=true
PRODUCTION_ENABLE_EXPERIMENTAL_FEATURES=false

# Notification Webhooks
SLACK_WEBHOOK_URL=your-production-slack-webhook-url
DISCORD_WEBHOOK_URL=your-production-discord-webhook-url
PAGERDUTY_INTEGRATION_KEY=your-pagerduty-integration-key

# Cache Configuration
PRODUCTION_CACHE_TTL=3600  # 1 hour
PRODUCTION_CACHE_MAX_SIZE=1GB

# Session Configuration
PRODUCTION_SESSION_SECRET=CHANGE_THIS_SESSION_SECRET_IN_PRODUCTION
PRODUCTION_SESSION_MAX_AGE=3600000  # 1 hour

# API Rate Limiting
PRODUCTION_API_RATE_LIMIT=100   # requests per hour per IP
PRODUCTION_API_BURST_LIMIT=20   # burst requests

# File Storage Configuration
PRODUCTION_STORAGE_TYPE=s3  # local, s3, gcs
PRODUCTION_STORAGE_BUCKET=your-production-storage-bucket
PRODUCTION_STORAGE_REGION=your-storage-region
PRODUCTION_STORAGE_ACCESS_KEY=your-storage-access-key
PRODUCTION_STORAGE_SECRET_KEY=your-storage-secret-key

# CDN Configuration
PRODUCTION_CDN_URL=https://cdn.yourdomain.com
PRODUCTION_CDN_API_KEY=your-cdn-api-key

# Health Check Configuration
PRODUCTION_HEALTH_CHECK_INTERVAL=60  # seconds
PRODUCTION_HEALTH_CHECK_TIMEOUT=10   # seconds

# Metrics Configuration
PRODUCTION_METRICS_ENABLED=true
PRODUCTION_METRICS_PORT=9090

# Blue-Green Deployment Configuration
BLUE_GREEN_ENABLED=true
BLUE_ENVIRONMENT_PREFIX=blue
GREEN_ENVIRONMENT_PREFIX=green
TRAFFIC_SWITCH_DELAY=30  # seconds

# Monitoring Services
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
ALERTMANAGER_ENABLED=true

# Database Connection Pool
PRODUCTION_DB_POOL_MIN=5
PRODUCTION_DB_POOL_MAX=20
PRODUCTION_DB_POOL_IDLE_TIMEOUT=30000

# Performance Configuration
PRODUCTION_WORKER_PROCESSES=4
PRODUCTION_MAX_CONNECTIONS=1000
PRODUCTION_KEEPALIVE_TIMEOUT=65

# Security Headers
PRODUCTION_HSTS_MAX_AGE=31536000
PRODUCTION_CSP_ENABLED=true
PRODUCTION_CSRF_ENABLED=true

# Logging Configuration
PRODUCTION_LOG_FORMAT=json
PRODUCTION_LOG_ROTATION=daily
PRODUCTION_LOG_MAX_FILES=30
PRODUCTION_LOG_MAX_SIZE=100MB

# External Services
PRODUCTION_ELASTICSEARCH_URL=https://your-elasticsearch-cluster.com
PRODUCTION_ELASTICSEARCH_API_KEY=your-elasticsearch-api-key

# Compliance and Privacy
GDPR_ENABLED=true
DATA_RETENTION_DAYS=2555  # 7 years
PRIVACY_POLICY_URL=https://yourdomain.com/privacy
TERMS_OF_SERVICE_URL=https://yourdomain.com/terms

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System is under maintenance. Please try again later."

# Development Tools (disabled in production)
PRODUCTION_HOT_RELOAD=false
PRODUCTION_SOURCE_MAPS=false
PRODUCTION_MINIFY=true
PRODUCTION_COMPRESSION=true